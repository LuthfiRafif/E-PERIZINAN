<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lv_aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_pm"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:padding="30dp"/>

    <LinearLayout
        android:id="@+id/Ll_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lv_aplikasi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Apikasi"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsbold"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Ll_1"
        android:fontFamily="@font/poppinsmedium"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-31dp"
        android:text="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Ll_1"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="-31dp"
        android:text="Versi" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Ll_1"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="-75dp"
        android:text="Versi Pengembangan" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Ll_1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-75dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="0.0" />

    <LinearLayout
        android:id="@+id/Ll_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_below="@+id/Ll_1"
        android:layout_alignBottom="@+id/Ll_1"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="-160dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Pengembang"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Ll_2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="-31dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="FTI UNISKA" />

</RelativeLayout>